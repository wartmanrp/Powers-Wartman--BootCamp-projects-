@using Cts.Venture.Dto
@model SearchResultsDto

<table class="table table-striped table-bordered table-hover table-sortable table-filterable">
    <thead>
        <tr class="table-header">
            <th>Project Number</th>
            <th>ProjectName</th>
            <th>Status Update</th>

        </tr>
    </thead><!--/thead-->
    <tbody>
        @foreach (var item in Model.SearchResults)
        {
        <tr>
            <td>@Html.ActionLink(item.ProjectNumber, "ProjectMaintenance", "ProjectMaintenance", new { project = item.ProjectId}, null)</td>
            <td>@item.ProjectName</td>
           
                    @if (item.Status == "green")
                {
                    <td class="text-center"><i class="fa fa-flag green-flag"></i></td>
                }
                else if(item.Status == "yellow")
                {
                    <td class="text-center"><i class="fa fa-flag yellow-flag"></i></td>
                }
                else if(item.Status == "red")
                {
                    <td class="text-center"><i class="fa fa-flag red-flag"></i></td>
                }
                else
                {
                    <td class="text-warning text-center"><i class="fa fa-times"></i></td>
                }
              
            @*<td>@item.Status</td>*@
        </tr>
        }
    </tbody><!--/tbody-->
</table><!--/table-->
