@using Cts.Venture.Dto
@model ViewTodayDto

<h4 class="text-center">Upcoming Milestones</h4>

<table class="table table-striped table-bordered table-hover table-sortable table-filterable">
    <thead>
        <tr class="table-header">
            <th>Project</th>
            <th>Milestone</th>
            <th>Baseline Start</th>
            <th>Baseline Finish</th>
            <th>Actual Start</th>
            <th>Actual Finish</th>
            <th class="text-nowrap">% Complete</th>
        </tr>
    </thead><!--/thead-->
    <tbody>
        @foreach (var item in Model.UpcomingMilestones)
        {
        <tr>
            <td>@Html.ActionLink(item.Project, "ProjectMaintenance", "ProjectMaintenance", new { project = item.ProjectId}, null)</td>
            <td>@item.Milestone</td>
            <td>@item.BaselineStart</td>
            <td>@item.BaselineFinish</td>
            <td>@item.ActualStart</td>
            <td>@item.ActualFinish</td>
            <td>@item.PercentComplete</td>
        </tr>
        }
    </tbody><!--/tbody-->
</table><!--/table-->