@using Cts.Venture.Web
@model Cts.Venture.Dto.ProjectTeamDetailsDto

<div id="projectTeamTable">
    <div class="row">
        <div class="col-md-4">
            <div class="form-group row">
                <label for="ProjectNumber" class="col-md-4 col-form-label">Project Number</label>
                <div class="col-md-8">
                    @Html.TextBoxFor(x => x.Project.ProjectNumber, new { @class = "form-control", @readonly = "readonly"})
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group row">
                <label for="ProjectName" class="col-md-4 col-form-label">Project Name</label>
                <div class="col-md-8">
                    @Html.TextBoxFor(x => x.Project.ProjectName, new { @class = "form-control", @readonly = "readonly" })
                </div>
            </div></div>
        <div class="col-md-4">
            <div class="form-group row">
                <label for="ProjectCompletion" class="col-md-4 col-form-label">Project Completion</label>
                <div class="col-md-8">
                    @Html.TextBoxFor(x => x.Project.ProjectCompletion, new { @class = "form-control", @readonly = "readonly" })
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-4 col-md-offset-8 text-right">
            <a href="http://www.google.com/">@Model.Project.ProjectDirectory</a>
        </div>
    </div>

    <hr />

    <h4 class="text-center">Project Team</h4>

    <table class="table table-striped table-bordered table-hover table-sortable table-filterable">
        <thead>
            <tr class="table-header">
                <th>Role</th>
                <th>Resource</th>
                <th>Phone</th>
                <th>Email</th>
                <th></th>
            </tr>
        </thead><!--/thead-->
        <tbody>
        @if(Model.ProjectTeams != null)
        {
            foreach (var resource in Model.ProjectTeams)
            {
            <tr>
                <td><a href="javascript:setHidden(@resource.ProjectTeamId, @resource.ProjectTeamRoleId, @resource.RoleId, @resource.ResourceId)">@resource.Role</a></td>
                <td>@resource.Resource</td>
                <td>@resource.Phone</td>
                <td><a href="mailto:@resource.Email">@resource.Email</a></td>
                <td class="text-center"><button type="button" class="btn btn-xs" onclick="removeProjectTeam(@resource.ProjectTeamId, @resource.ProjectId)"><i class="fa fa-times text-warning" /></button></td>
            </tr>
            }
        } else
        {
           <tr>
              <div class="text-info">No team members have been added, select from the list below to start.</div>
           </tr>
        }
        </tbody><!--/tbody-->
    </table><!--/table-->

    <br />
    @Html.HiddenFor(x => x.Project.ProjectId)



    @*<hr />*@


    @*@Html.Partial("_AddTeamPartial", Model)*@



    @*<script type="text/javascript">
        function changeRole(roleId, resourceId, teamId, projectTeamRoleId) {
            $('#Roles')
        }
    </script>*@

</div>

